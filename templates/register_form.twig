{% extends "base.twig" %}

{% block content %}
  <div class="container columns">
    <div class="card column is-half is-offset-one-quarter">
      <header class="card-header">
        <p class="card-header-title">
        Register
        </p>
      </header>

      <div class="card-content">
        <p class="subtitle">
        If you are an alumni, you can register here.
        </p>

        <form method="post">
          <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left">
              <input type="email" class="input" name="email" placeholder="Email address">
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
          </div>



          <div class="field">
            <label class="label">Full Name</label>
            <div class="control has-icons-left">
              <input type="text" class="input" name="full_name" placeholder="Full name">
              <span class="icon is-small is-left">
                <i class="fa fa-user"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <label class="label">Year Graduated</label>
            <div class="control has-icons-left">
              <input type="number" class="input" name="year_graduated" placeholder="The year you graduated" value="1980">
              <span class="icon is-small is-left">
                <i class="fa"></i>
              </span>
            </div>
          </div>

          <div class="field has-text-right">
            <button class="button is-success">
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
